{
    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get categories with subcategories",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Category"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/categories/{slug}": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Get category with subcategories by slug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CategoryDetails"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get products",
                "parameters": [
                    {
                        "name": "skip",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 0
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Product"
                                            }
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 100
                                        },
                                        "skip": {
                                            "type": "integer",
                                            "example": 0
                                        },
                                        "limit": {
                                            "type": "integer",
                                            "example": 10
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Subcategory": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 62
                    },
                    "name": {
                        "type": "string",
                        "example": "Glennie Barrows"
                    },
                    "slug": {
                        "type": "string",
                        "example": "glennie-barrows"
                    },
                    "image": {
                        "type": "string",
                        "nullable": true,
                        "example": null
                    }
                }
            },
            "Category": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 53
                    },
                    "name": {
                        "type": "string",
                        "example": "Dominic Mayer"
                    },
                    "slug": {
                        "type": "string",
                        "example": "dominic-mayer"
                    },
                    "subcategories": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Subcategory"
                        }
                    }
                }
            },
            "Product": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string",
                        "nullable": true
                    },
                    "rating": {
                        "type": "number",
                        "example": 5435
                    },
                    "price": {
                        "type": "number",
                        "nullable": true,
                        "example": 52.15
                    },
                    "discount_price": {
                        "type": "number",
                        "nullable": true,
                        "example": 45.15
                    },
                    "thumbnail": {
                        "type": "string",
                        "nullable": true,
                        "example": "https://placehold.co/150x150",
                        "format": "uri",
                        "description": "Image URL"
                    }
                }
            },
            "CategoryDetails": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 53
                    },
                    "name": {
                        "type": "string",
                        "example": "Dominic Mayer"
                    },
                    "slug": {
                        "type": "string",
                        "example": "dominic-mayer"
                    },
                    "meta_title": {
                        "type": "string",
                        "example": "Dominic Mayer"
                    },
                    "meta_description": {
                        "type": "string",
                        "nullable": true,
                        "example": "Dominic Mayer"
                    },
                    "subcategories": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Subcategory"
                        }
                    }
                }
            }
        }
    }
}
